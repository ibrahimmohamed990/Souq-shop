@model Category
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Delete Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="row">
    <div class="col-md-4">
    <form method="post">
        <input hidden asp-for="Id"/> 

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input readonly asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea readonly asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back to home</a>
        </div>
    </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

