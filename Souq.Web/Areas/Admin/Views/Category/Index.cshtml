@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Categories Menu"; 
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div>
    <a class="btn btn-primary" asp-action="Create">Create Category</a>
</div>
<br />
<table class="table table-hover" width="100%">
    <thead>
    <tr>
        <td><b>Name</b></td>
        <td><b>Description</b></td>
        <td><b>Date Created</b></td>
        <td><b>Actions</b></td>
    </tr>
    </thead>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a class="btn btn-success" href="/Admin/Category/Edit/@item.Id">Edit</a>
                <a class="btn btn-danger" href="/Admin/Category/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>