@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark"><h3>Click here to Logout</h3></button>
            </form>
            <script>
                document.getElementById('logoutForm').submit(); 
            </script>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
